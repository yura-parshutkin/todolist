{% extends 'noauth.twig' %}

{% block content %}
	<form id="login-form" action="/login-check" method="post" role="form">
		<div class="form-group">
			<input type="text" name="_username" id="username" tabindex="1" class="form-control" placeholder="Username" value="">
		</div>
		<div class="form-group">
			<input type="password" name="_password" id="password" tabindex="2" class="form-control" placeholder="Password">
		</div>
		<div class="form-group">
			<div class="row">
				<div class="col-sm-6 col-sm-offset-3">
					<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
				</div>
			</div>
		</div>
	</form>
{% endblock %}